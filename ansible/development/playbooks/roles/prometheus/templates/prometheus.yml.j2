global:
  scrape_interval: 15s

scrape_configs:

  - job_name: 'node_exporter'
    static_configs:
      - targets:
{% for host in groups['monitored'] %}
        - '{{ hostvars[host].ansible_host }}:{{ node_exporter_port }}'
{% endfor %}

  - job_name: 'pm2'
    static_configs:
      - targets:
{% for host in groups['monitored'] %}
        - '{{ hostvars[host].ansible_host }}:{{ pm2_port }}'
{% endfor %}

  - job_name: 'promtail'
    static_configs:
      - targets:
{% for host in groups['monitored'] %}
