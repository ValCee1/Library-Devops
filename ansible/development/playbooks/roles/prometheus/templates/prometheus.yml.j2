
global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:{{ prometheus_port }}]

  - job_name: 'node_exporter'
    static_configs:
      - targets:
{% for host in groups['all'] %}
        - '{{ hostvars[host].ansible_default_ipv4.address }}:{{ node_exporter_port }}'
{% endfor %}

  - job_name: 'pm2'
    static_configs:
      - targets:
{% for host in groups['all'] %}
        - '{{ hostvars[host].ansible_default_ipv4.address }}:{{ pm2_port }}'
{% endfor %}

  - job_name: 'loki'
    static_configs:
      - targets:
{% for host in groups['monitors'] %}
        - '{{ hostvars[host].ansible_default_ipv4.address }}:{{ loki_port }}'
{% endfor %}

  - job_name: 'promtail'
    static_configs:
      - targets:
{% for host in groups['monitored'] %}
        - '{{ hostvars[host].ansible_default_ipv4.address }}:{{ promtail_port }}'
{% endfor %}

  - job_name: 'grafana'
    static_configs:
      - targets:
{% for host in groups['monitored'] %}
        - '{{ hostvars[host].ansible_default_ipv4.address }}:{{ grafana_port }}
{% endfor %}  

  - job_name: 'telegraf'
    static_configs:
      - targets:
{% for host in groups['monitored'] %}
        - '{{ hostvars[host].ansible_default_ipv4.address }}:{{ telegraf_port }}'
{% endfor %}
